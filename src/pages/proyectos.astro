                    nombreOpcional2="Centro Electrónico de Negocios" 
                    urlOpcional2="https://carvajaldigital.co/cen/"   
                    etiquetas="Ember,Ember,Ember,MusicKit.js" 
                    />
                </ul>
            </div>

            <div class="my-8">
                <ul class="group/list">

                    <CardProyectos
                    titulo="Tienda Online"
                    urlPrincipal="https://tienda-online-react-tailwind-js.vercel.app/" 
                    imgPreview="./imagenes/tienda_online.webp" 
                    descripcion="Web app for visualizing personalized Spotify data. View your top artists, top tracks, recently played tracks, and detailed audio information about each track. Create and save new playlists of recommended tracks based on your existing playlists and more" 
                    etiquetas="React,Tailwind,JS"
                    />
                    <CardProyectos
                    titulo="Formulario CRUD"
                    urlPrincipal="https://org-formulario-jsx.vercel.app/" 
                    imgPreview="./imagenes/CRUD_equipos.webp" 
                    descripcion="Web app for visualizing personalized Spotify data. View your top artists, top tracks, recently played tracks, and detailed audio information about each track. Create and save new playlists of recommended tracks based on your existing playlists and more" 
                    etiquetas="React,CSS,JS"
                    />
            </div>

        </div>
    </section>
</Layout>