---

const styleLI ="w-[40px] md:w-[130px]   mx-3 lg:mx-1 rounded-xl bg-gray-600  hover:shadow-md hover:shadow-black transition-all";

const styleA ="text-center w-[40px] md:w-[130px] md:p-1 md:w-auto md:mx-auto h-full md:flex m-auto";

const btnFooter = "w-[45px] mx-auto md:w-auto inline-flex items-center mx-1 md:px-4 my-1  font-medium bg-transparent rounded-xl hover:bg-gray-800 hover:text-white focus:z-10 focus:hover:contrast-150 hover:shadow-md hover:shadow-black transition-all dark:hover:bg-slate-600";

const bgFooter ="bg-gradient-to-t from-gray-400 from-0% via-gray-300 via-50% to-gray-200 to-100%  dark:from-black dark:via-slate-900  dark:to-[#19202b]"

---

<footer class={`${bgFooter}  bottom-0  w-full  md:p-11 font-bold text-center items-center pb-3 `}>
    <section class="grid  lg:grid-cols-6">

        <div class="my-4 lg:col-span-2 lg:mt-10 md:mx-10 lg:mx-2">
            <h4 class="mb-2 md:mb-4 ">Redes sociales</h4>
            <ul class="flex text-gray-200 justify-center lg:justify-around  ">

                <li class={`hover:bg-[#25D366] md:w-[140px] ${styleLI}`}>
                <a class={styleA} href="https://wa.me/3046840241">
                    <img class="w-7 h-8 m-auto md:mx-1 text-white " src="./imagenes/whatsapp_icon.svg" alt="logo whatsapp"> 
                    <span class="hidden md:block my-auto">WhatsApp</span>
                </a>
                </li>
                <li class={`hover:bg-[#0A66C2]  ${styleLI}`}><a class={styleA} href="https://www.linkedin.com/in/andres-felipe-prado-velasco/">
                    <img class="w-7 h-8 m-auto md:mx-1 " src="./imagenes/linkedinLogo.svg" alt="logo linkedin"> 
                    <span class="hidden md:block my-auto ">Linkedin</span>
                </a>
                </li>
                <li class={`hover:bg-[#E84357]  ${styleLI}`}><a class={styleA} href="https://www.instagram.com/andresprado_2525/">
                    <img class="w-6 h-8 m-auto md:mx-1 " src="./imagenes/instagramLogo.svg" alt="logo instagram">
                    <span class="hidden md:block my-auto">Instagram</span>
                </a>
                </li>
                <li class={`hover:bg-[#1d242f] md:w-[110px]  ${styleLI}`}><a class={styleA} href="https://github.com/dakan2525?tab=repositories">
                    <img class="w-8 h-8 m-auto md:mr-1 md:mx-0" src="./imagenes/githubLogo.svg" alt="logo github"> 
                    <span class="hidden md:block my-auto">Github  </span>
                </a>
                </li>
            </ul>
        </div>

        <div class="my-4 lg:col-span-2 md:mx-10">
            <h4 class="mb-1 md:mb-4 ">Menu</h4>
            
            <div class="w-[300px] md:w-full  h-[40px] mx-auto inline-flex rounded-2xl shadow-md shadow-gray-450">

                <button type="button" class={btnFooter} onclick=`{window.location.pathname !== '/' ? location.href = '/' : ''}`>
                    <img class="w-9 h-9 mx-auto  " src="./imagenes/books-removebg-preview.webp" alt="logo inicio">
                    <span class="hidden md:block md:m-auto px-2">Inicio</span>
                </button>
                
                <button type="button" class={btnFooter} onclick=`{window.location.pathname !== '/habilidades' ? location.href = '/habilidades' : '' }`>
                    <img class="w-9 h-9 mx-auto " src="./imagenes/skills.webp" alt="logo habilidades">
                    <span class="hidden md:block md:m-auto px-2">Habilidades</span>
                </button>

                <button type="button" class={btnFooter} onclick=`{window.location.pathname !== '/proyectos' ? location.href = '/proyectos' : '' }`>
                    <img class="w-9 h-9 mx-auto  " src="./imagenes/proyectos.svg" alt="logo proyectos">
                    <span class="hidden md:block md:m-auto px-2">Proyectos</span>
                </button>
                
                <button type="button" class={btnFooter} onclick=`{window.location.pathname !== '/chistes' ? location.href = '/chistes' : '' }`>
                    <img class="w-8 h-8 mx-auto " src="./imagenes/risa.svg" alt="logo chistes">
                    <span class="hidden md:block md:m-auto px-2">Chistes</span>
                </button>
        </div>

        </div>

        <div class=" my-4 lg:mt-10">
            <h4 class="mb-4 ">Datos de contacto</h4>
            <div class="">
                <p>andres25prado@gmail.com</p>
                <p>304 68 40 241</p>
                <p>Cali - Colombia</p>

            </div>                    
        </div>

        <div class="my-4 lg:mt-10">
            <h4 class="mb-4">Estudie en:</h4>
            <a href="https://www.aluracursos.com/sobre"><img class=" h-20 w-auto mx-auto" src="./imagenes/logo-aluraespanhol.svg" alt="Logo Alura"></a>
        </div>

    </section>
    
    <section class="pt-0">
        <p class="">Desarrollado por Andres Prado V <br>2023 - Copyright &#169</p>
    </section>
</footer>