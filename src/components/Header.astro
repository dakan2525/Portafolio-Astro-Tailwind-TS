---
const btnHeder = "w-[45px] md:w-auto rounded-2xl shadow-sm shadow-gray-600 shadow-gray-600 dark:shadow-gray-300 flex justify-between py-1 px-2 mx-3 hover:shadow-inner hover:shadow-gray-600 transition-all"

const bgHeder = "bg-gradient-to-b from-gray-400 from-0% via-gray-300 via-50% to-gray-200 to-100%  dark:from-black dark:via-slate-900  dark:to-[#19202b]"
---
<header class={`${bgHeder} md:px-4 md:py-8 w-full mx-auto grid grid-cols-5   lg:px-40  font-bold text-center items-center py-5`}>
    

    <div class="ml-5  col-span-4 w-[40px] md:w-16 md:h-16  rounded-xl p-1 transition-all lg:col-span-1">
        <button class="dark:text-white" type="button" class={btnHeder} onclick=`{window.location.pathname !== '/' ? location.href = '/' : ''}`>
            <svg class="h-[42px] md:h-16 md:m-auto" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"><path d="M6.818 22v-2.857C6.662 17.592 5.633 16.416 4.682 15m9.772 7v-1.714c4.91 0 4.364-5.714 4.364-5.714s2.182 0 2.182-2.286l-2.182-3.428c0-4.572-3.709-6.816-7.636-6.857c-2.2-.023-3.957.53-5.27 1.499"/><path d="m13 7l2 2.5l-2 2.5M5 7L3 9.5L5 12m5-6l-2 7"/></g></svg>
            
        </button>
    </div>


    <div class="order-3 md:pt-10 mb-5 col-span-5 lg:col-span-3 lg:order-1 inline-flex justify-center ">
            
            <button class={btnHeder} type="button" onclick=`{window.location.pathname !== '/' ? location.href = '/' : ''}`>
                <img class="w-7 md:w-9 m-auto " src="./imagenes/books-removebg-preview.webp" alt="logo inicio">
                <span class="hidden md:block md:m-auto px-2">Inicio</span>
            </button>
            
            <button class={btnHeder} type="button"  onclick=`{window.location.pathname !== '/habilidades' ? location.href = '/habilidades' :    '' }`>
                <img class="w-7 md:w-9 m-auto " src="./imagenes/skills.webp" alt="logo habilidades">
                <span class="hidden md:block md:m-auto px-2">Habilidades</span>
            </button>

            <button class={btnHeder} type="button"  onclick=`{window.location.pathname !== '/proyectos' ? location.href = '/proyectos' : '' }`>
                <img class="w-7 md:w-9 m-auto " src="./imagenes/proyectos.svg" alt="logo proyectos">
                <span class="hidden md:block md:m-auto px-2">Proyectos</span>
            </button>
            
            <button class={btnHeder} type="button"  onclick=`{window.location.pathname !== '/chistes' ? location.href = '/chistes' : '' }`>
                <img class="w-6 md:w-8 m-auto  " src="./imagenes/risa.svg" alt="logo chistes">
                <span class="hidden md:block md:m-auto px-2">Chistes</span>
            </button>
    </div>

    <div class="order-1  text-end mr-5">
        <button  class="" onclick="{document.documentElement.classList.toggle('dark')}">
            <samp class="dark:hidden"><img class="w-[45px] md:md:w-16" src="./imagenes/sol.svg" alt="luna"></samp>
            <samp class="hidden dark:block"><img class="w-[37px] md:w-[57px]" src="./imagenes/luna.svg" alt="luna"></samp>
        </button>
    </div>
        
</header>

