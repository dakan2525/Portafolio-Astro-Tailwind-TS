---
interface Props {
    id: number
    nombre?: string
    apodo?: string | null //null para no tenerlo en cuenta
    correo: string
    chiste: string
}

const {id, nombre="Anonimus", apodo="Anonimus", correo,chiste} = Astro.props
---

<section class="w-full mx-auto text-sm  p-2 bg-transparent color-[#202020] border-gray-500 border-b-[3px] border-r-[3px] shadow-md lg:shadow-lg shadow-slate-800 rounded-2xl lg:w-full h-full ">

    <div class="lg:w-96 bg-gradient-to-tl from-transparent from-slate-10% via-gray-200 via-80% to-[#454256] to-100% py-1 mx-auto rounded-3xl mb-2 flex items-center justify-center text-start shadow-sm shadow-black dark:from-transparent dark:via-gray-600 dark:to-[#19202b]">
    <img class=" mr-6 w-14 h-14 rounded-full object-cover" src="./imagenes/user.webp" alt="user generico">
        <div>
            <p>Nombre: <b>{nombre}</b></p>
            <p>Apodo: <b>{apodo}</b></p>
            <p>Correo: <b>{correo}</b></p>
        </div>
    </div>
    <img class="w-[full] h-[full] object-cover rounded-3xl pb-3 opacity-80" src={chiste} alt={`chiste de ${apodo}`}>    
</section>