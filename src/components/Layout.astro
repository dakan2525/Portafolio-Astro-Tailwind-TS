</style>

<!-- capturamos la animacion y hacemos lo que se indique en los @keyframes -->
<script>
        if (document.startViewTransition) {

window.navigation.addEventListener('navigate', (event) => {
    console.log(event.destination.url)
    const toUrl = new URL(event.destination.url)

    /// no es una pagina externa? si es true no hace nada
    if (location.origin !== toUrl.origin) return

    /// si estamos navegando en el mismo dominio (origen)
    event.intercept({
        async handler() {
            
            ///vamso a cargar la pagina de destino
            /// con el metodo fetch optenemos el HTML 
            const response = await fetch(toUrl.pathname) // se espera /habilidade o /chistes
            // mejor que traer la info con json() la traemos con text() para que sea texto plano
            const text = await response.text()
            //vamos a separar con un regex de busqueda solo lo que este tre las etiquetas de <body></body>
            const [, data] = text.match(/<body[^>]*>([\s\S]*)<\/body>/i)
            
            //utilizamos la API de viwe Transition 
            document.startViewTransition(() => {

                //como tiene que actualizar la vista al pasar de vieja ruta a nueva ruta
                document.body.innerHTML = data

                // para hacer el scroll hasta el inicio de la nueva pagina 
                document.documentElement.scrollTop = 0
            })

        }
    })
})
}

</script>

